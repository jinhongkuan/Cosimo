DATABASE_URL=postgresql://user:password@host:5432/cosimo

# Auth0 Configuration
# Get these from your Auth0 Application settings at https://manage.auth0.com
AUTH0_SECRET=a-long-random-string-at-least-32-characters-for-session-encryption
AUTH0_BASE_URL=http://localhost:3000
AUTH0_ISSUER_BASE_URL=https://your-tenant.auth0.com
AUTH0_CLIENT_ID=your-client-id
